= form_for(@battle) do |f|
  - if @battle.errors.any?
    #error_explanation
      %h2
        = pluralize(@battle.errors.count, "error")
        prohibited this battle from being saved:
      %ul
        - @battle.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :topic
    %br/
    = f.text_field :topic
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :created_by_id
    %br/
    = f.select :created_by_id, options_from_collection_for_select(User.all, :id, :full_name)
  .actions
    = f.submit
