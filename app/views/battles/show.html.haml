%p#notice= notice

.battle-header.callout{class: "#{@battle.won? ? "warning" : "success"}"}
  .row
    .small-2.columns
      %strong Created by:
      = image_tag @battle.created_by.avatar_url
      = @battle.created_by.full_name
    .columns{class: "#{@battle.won? ? "small-8" : "small-10"}"}
      %h1= "Topic: #{@battle.topic}"
      %h2= text_with_images @battle.description
    - if @battle.won?
      .columns.small-2
        %strong WINNER:
        = image_tag @battle.winning_comment.image_url

- @comments.each do |comment|
  = render partial: "comment", locals:{comment:comment, battle:@battle}

- unless @battle.won?
  = form_for(@comment) do |f|
    - if @comment.errors.any?
      #error_explanation
        %h2= pluralize(@comment.errors.count, "error")
        %ul
          - @comment.errors.full_messages.each do |message|
            %li= message
    .field
      = f.text_area :body, placeholder: "Write your comment here"
    .field= f.hidden_field :battle_id, value: @battle.id
    .actions= f.submit
